<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">Edit Post</h1>
      <div class="form">
        <div class="form-body">
          <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <%= form_with(url: "/posts/#{@post.id}/update", local: true) do |f| %>
            <%= f.text_area :content, value: @post.content %>
            <%= f.submit "Save" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>