<div class="main users-new">
  <div class="container">
    <div class="form-heading">Sign Up</div>
    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>

        <%= form_with url: users_create_path, local: true do |f| %>
          <%= f.label :name %>
          <%= f.text_field :name %>
    
          <%= f.label :email %>
          <%= f.email_field :email %>
    
          <%= f.label :password %>
          <%= f.password_field :password %>
    
          <%= f.submit "Create" %>
        <% end %>

      </div>
    </div>
  </div>
</div>