<div class="main users-new">
  <div class="container">
    <div class="form-heading">ログイン</div>
    <div class="form users-form">
      <div class="form-body">
        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>

        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

          <%= f.label :email %>
          <%= f.email_field :email %>
    
          <%= f.label :password %>
          <%= f.password_field :password %>

          <%= f.submit "Log in" %>

        <% end %>


      </div>
    </div>
  </div>
</div>
